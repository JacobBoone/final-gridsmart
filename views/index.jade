extends layout

block content
	h1 Gridsmart
		//- span Rate your home energy and water usage. Compare and save!
	div.main-panel
		ul.nav.nav-tabs(role="tablist")
			li.active
				a(href="/users/#{userId}") Property
			if user 
				li
					a(href="/users/#{userId}/bills") Bills
				//- electric water and fuel
				li
					a(href="/users/#{userId}/footprint") Usage Impact
		div.tab-content
			div#property.tab-pane.active
				h3 Property Details
				if user
					p
						strong(name="zipcode") Location: 
						| #{user.houses[0].city}, #{user.houses[0].state} #{user.houses[0].zipcode}
						
					p
						strong Building Type: 
						| #{user.houses[0].buildingType}
					p
						strong Year Built: 
						| #{user.houses[0].yearBuilt}
					p
						strong Square Footage: 
						| #{user.houses[0].sqft} sf.

				else
					form#property-form.form-horizontal(action="/users/#{userId}/propertySubmission" method="post")
